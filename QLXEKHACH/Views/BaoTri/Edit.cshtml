@model QLXEKHACH.Models.tBaoTri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>SỬA THÔNG TIN BẢO TRÌ</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Số thứ tự
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoThuTu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoThuTu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số xe
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoXe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Ngày bảo trì
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayBaoTri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayBaoTri, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Thành tiền
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</center>
