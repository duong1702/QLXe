@model IEnumerable<QLXEKHACH.Models.tBaoTri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <div>
        <h2 style="padding:5px";>BẢNG THÔNG TIN BẢO TRÌ</h2>
        <table class="table">
            <tr>
                <th>
                    Số Thứ Tự
                </th>
                <th>
                    Số Xe
                </th>
                <th>
                    Ngày Bảo Trì
                </th>
                <th>
                    Thành Tiền
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding:10px";>
                        @Html.DisplayFor(modelItem => item.SoThuTu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayBaoTri)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhTien)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.SoThuTu }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.SoThuTu }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.SoThuTu })
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Tạo mới", "Create")
        </p>
    </div>
</center>
