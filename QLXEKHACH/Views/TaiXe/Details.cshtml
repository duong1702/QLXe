@model QLXEKHACH.Models.tTaiXe

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>CHI TIẾT THÔNG TIN TÀI XẾ</h2>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Mã tài xế
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTaiXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên tài xế
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTaiXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Loại bằng lái xe
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoaiBangLaiXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoaiBangLaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Địa chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ghi chú
            <div class="col-md-10">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaTaiXe }) |
        @Html.ActionLink("Quay lại", "Index")
    </p>
</center>