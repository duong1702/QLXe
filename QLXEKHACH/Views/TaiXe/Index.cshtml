@model IEnumerable<QLXEKHACH.Models.tTaiXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>THÔNG TIN TÀI XẾ</h2>
    <table class="table">
        <tr>
            <th>
                Mã tài xế
            </th>
            <th>
                Tên tài xế
            </th>
            <th>
                Loại bằng lái xe
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Ghi chú
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="padding:10px";>
                    @Html.DisplayFor(modelItem => item.MaTaiXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTaiXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiBangLaiXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaTaiXe }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaTaiXe }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaTaiXe })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Tạo mới", "Create")
    </p>
</center>