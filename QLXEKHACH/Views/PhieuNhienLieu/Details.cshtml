@model QLXEKHACH.Models.tPhieuNhienLieu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2>CHI TIẾT BẢNG PHIẾU NHIÊN LIỆU</h2>

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Số phiếu
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoPhieu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoPhieu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Ngày lập phiếu
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayLapPhieu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayLapPhieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mã nhiên liệu
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNhienLieu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNhienLieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số lượng
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.SoPhieu }) |
        @Html.ActionLink("Quay lại", "Index")
    </p>
</center>