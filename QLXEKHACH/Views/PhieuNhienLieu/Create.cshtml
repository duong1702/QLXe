@model QLXEKHACH.Models.tPhieuNhienLieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>TẠO MỚI THÔNG TIN PHIẾU NHIÊN LIỆU</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               Sô phiếu
                <div class="col-md-10" >
                    @Html.EditorFor(model => model.SoPhieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoPhieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               Ngày lập phiếu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayLapPhieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayLapPhieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               Mã nhiên liệu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaNhienLieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaNhienLieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số lượng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số xe
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoXe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</center>