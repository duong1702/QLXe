@model QLXEKHACH.Models.tNhienLieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>SỬA BẢNG THÔNG TIN NHIÊN LIỆU</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               Mã nhiên liệu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaNhienLieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaNhienLieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Tên nhiên liệu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNhienLieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNhienLieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Đơn giá
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</center>