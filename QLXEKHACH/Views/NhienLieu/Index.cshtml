@model IEnumerable<QLXEKHACH.Models.tNhienLieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>BẢNG THÔNG TIN NHIÊN LIỆU</h2>
    <table class="table">
        <tr>
            <th>
               Mã nhiên liệu
            </th>
            <th>
                Tên nhiên liệu
            </th>
            <th>
               Đơn giá
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="padding:10px";>
                    @Html.DisplayFor(modelItem => item.MaNhienLieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNhienLieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNhienLieu }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNhienLieu }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhienLieu })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Tạo mới", "Create")
    </p>
</center>