@model QLXEKHACH.Models.tChuyen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<center>
    <h2 style="padding:5px";>SỬA THÔNG TIN BẢNG CHUYẾN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mã chuyến
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaChuyen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaChuyen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số xe
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoXe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã tài xế
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaTaiXe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaTaiXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số lượng khách
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongKhach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuongKhach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Giờ xuất bến
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GioXuatBen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GioXuatBen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</center>
